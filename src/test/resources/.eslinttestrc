{
    "env": {
        "browser": true,
        "amd": true
    },
    "globals": {
        "DocumentFragment": true
    },
    "rules": {
        "valid-jsdoc": 0,
        "curly": [1, "multi"],
        "brace-style": [1, "stroustrup"],
        "no-constant-condition": 1,
        "no-multiple-empty-lines": [0, {"max": 2}],
        "no-unused-vars": [1, {"vars": "local", "args": "none"}],
        // "quotes": [2, "single"],
        "one-var": 2,
    }
}
